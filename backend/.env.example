# Backend Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Connection (required)
# Local: mongodb://localhost:27017
# Atlas: mongodb+srv://user:password@cluster.mongodb.net
MONGO_URL=mongodb://localhost:27017
DB_NAME=veriqo_database

# JWT Secret (required) - Generate a secure random string
JWT_SECRET=your-secure-jwt-secret-key-here

# OpenAI API Key (required)
# Get from: https://platform.openai.com/api-keys
EMERGENT_LLM_KEY=sk-your-openai-api-key

# Stripe API Key (required for payments)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=sk_test_your-stripe-key

# Resend API Key (optional - for password reset emails)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your-resend-key

# CORS Origins (required)
# Use * for development, specific domains for production
CORS_ORIGINS=*
